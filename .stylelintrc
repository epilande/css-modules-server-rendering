{
  "extends": "stylelint-config-standard",
  "ignoreFiles": ["node_modules/**/*.css"],
  "rules": {
    "selector-pseudo-class-no-unknown": [true, {
      "ignorePseudoClasses": [
        "export",
        "import",
        "global",
        "local"
      ]
    }],
    "property-no-unknown": [ true, {
      "ignoreProperties": [
        "composes"
      ]
    }]
  }
}
