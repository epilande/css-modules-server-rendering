{
  "name": "yaris",
  "version": "1.0.0",
  "description": "Yet Another React Isomorphic Universal Starter",
  "main": "server/index.js",
  "scripts": {
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint \"./src/**/*.js\" \"./server/**/*.js\"",
    "lint:css": "stylelint \"./src/**/*.js\"",
    "clean": "rimraf public",
    "dev": "BABEL_ENV=node NODE_ENV=development node server/index.js",
    "start": "NODE_ENV=production node public/server.js",
    "build": "npm run clean && npm run build:prod && npm run build:server",
    "build:prod": "NODE_ENV=production webpack --progress --colors --config webpack.prod.babel.js",
    "build:server": "NODE_ENV=production webpack --progress --colors --config webpack.server.babel.js",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "build:storybook": "build-storybook -c .storybook",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "engines": {
    "node": ">= 6.x",
    "npm": ">= 3.x"
  },
  "author": "Emmanuel Pilande",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.16.1",
    "compression": "^1.6.2",
    "express": "^4.14.1",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-helmet": "^4.0.0",
    "react-redux": "^5.0.2",
    "react-router": "^3.0.2",
    "react-router-redux": "^4.0.7",
    "redux": "^3.6.0",
    "redux-thunk": "^2.2.0",
    "sanitize.css": "^4.1.0",
    "styled-components": "^2.0.0-4"
  },
  "devDependencies": {
    "@kadira/storybook": "^2.35.3",
    "babel-core": "^6.22.1",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^18.0.0",
    "babel-loader": "^6.2.10",
    "babel-plugin-styled-components": "^1.0.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.23.0",
    "babel-polyfill": "^6.22.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-0": "^6.22.0",
    "babel-register": "^6.22.0",
    "chunk-manifest-webpack-plugin": "^1.0.0",
    "css-loader": "^0.26.1",
    "enzyme": "^2.7.1",
    "enzyme-to-json": "^1.4.5",
    "eslint": "^3.15.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-import-resolver-webpack": "^0.8.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.9.0",
    "file-loader": "^0.10.0",
    "jest": "^18.1.0",
    "offline-plugin": "^4.6.1",
    "react-addons-test-utils": "^15.4.2",
    "rimraf": "^2.5.4",
    "style-loader": "^0.13.1",
    "stylelint": "^7.8.0",
    "stylelint-config-standard": "^16.0.0",
    "stylelint-processor-styled-components": "^0.0.4",
    "url-loader": "^0.5.7",
    "webpack": "^2.2.1",
    "webpack-dev-middleware": "^1.10.0",
    "webpack-hot-middleware": "^2.16.1",
    "webpack-manifest-plugin": "^1.1.0",
    "webpack-merge": "^2.6.1",
    "webpack-node-externals": "^1.5.4"
  },
  "jest": {
    "snapshotSerializers": [
      "<rootDir>/node_modules/enzyme-to-json/serializer"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  }
}
